{
    "name": "freesoftde/env-reader",
    "description": "Simple Env Reader for PHP",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Freesoftde\\EnvReader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Freesoftde\\EnvReader\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "overtrue/phplint": "^9.0",
        "vimeo/psalm": "^5.7",
        "slevomat/coding-standard": "^8.8"
    },
    "scripts": {
        "lint": "vendor/bin/phplint src",
        "phpcs": "vendor/bin/phpcs --standard=PSR12 src tests",
        "psalm": "vendor/bin/psalm",
        "unit": "vendor/bin/phpunit tests",
        "test": [
            "@lint",
            "@phpcs",
            "@psalm",
            "@unit"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
